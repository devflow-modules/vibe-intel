{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@devflow-modules/vibe-core/*": ["packages/core/src/*"],
      "@devflow-modules/vibe-shared/*": ["packages/shared/src/*"],
      "@devflow-modules/vibe-api/*": ["packages/api/src/*"]
    }
  },
  "include": ["packages"]
}
