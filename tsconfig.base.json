{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Vibe Intel Base TSConfig",
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@devflow-modules/vibe-shared": [
        "packages/shared/src/index.ts"
      ],
      "@devflow-modules/vibe-shared/*": [
        "packages/shared/src/*"
      ],
      "@devflow-modules/vibe-core": [
        "packages/core/src/index.ts"
      ],
      "@devflow-modules/vibe-core/*": [
        "packages/core/src/*"
      ],
      "@devflow-modules/vibe-api": [
        "packages/api/src/index.ts"
      ],
      "@devflow-modules/vibe-api/*": [
        "packages/api/src/*"
      ],
      "@devflow-modules/vibe-ui": [
        "packages/ui/src/index.ts"
      ],
      "@devflow-modules/vibe-ui/*": [
        "packages/ui/src/*"
      ]
    }
  },
  "include": [
    "packages"
  ]
}